{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": false,
    "sourceMap": true,
    "declaration": true,
    "strictNullChecks": true,
    "module": "commonjs",
    "target": "es2016",
    "lib": ["es2015", "dom"],
    "jsx": "react",
    "typeRoots": ["node_modules/@types"]
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./src/tests/*"
  ]
}
